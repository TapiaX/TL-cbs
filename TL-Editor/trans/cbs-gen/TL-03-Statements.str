module TL-03-Statements

imports
  libstratego-gpp
  signatures/-
  pp/TL-parenthesize
  pp/TL-pp

imports
  cbs-gen/TL-01-Lexical
  cbs-gen/TL-02-Expressions

// Language "TL"

rules

// #3 Programs
              

to-funcons:
  |[ declare-vars[: int(:ID:) :] ]| ->
  |[ bind (id[: (:ID:) :], 
             allocate-initialised-variable (integers, 
                     0)) ]|
to-funcons:
  |[ execute[: (:ID:)=(:AExp:) :] ]| ->
  |[ assign (bound (id[: (:ID:) :]), 
             eval[: (:AExp:) :]) ]|
to-funcons:
  |[ execute[: print(:Exp:) :] ]| ->
  |[ print (to-string eval[: (:Exp:) :], 
             "\n") ]|
to-funcons:
  |[ execute[: (:S1:)(:S2:) :] ]| ->
  |[ sequential (execute[: (:S1:) :], 
             execute[: (:S2:) :]) ]|

